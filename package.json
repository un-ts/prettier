{
  "name": "@unts/prettier",
  "version": "0.0.0",
  "type": "module",
  "description": "Opinionated but Incredible Prettier plugins.",
  "repository": "git@github.com:un-ts/prettier.git",
  "author": "JounQin (https://www.1stG.me) <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.6.7",
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -f cjs",
    "build:ts": "tsc -b",
    "clean": "rimraf dist coverage 'packages/*/{lib,*.tsbuildinfo}'",
    "dev": "vitest",
    "docs:build": "vite build",
    "docs:dev": "vite dev",
    "format": "tsx scripts/format",
    "languages": "tsx scripts/languages",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "lint:tsc": "tsc --noEmit",
    "postversion": "pnpm i --no-frozen-lockfile",
    "prepare": "simple-git-hooks && pnpm languages || exit 0",
    "release": "changeset publish",
    "serve": "sirv dist",
    "test": "vitest run --coverage",
    "typecov": "type-coverage",
    "vercel-build": "pnpm docs:build"
  },
  "devDependencies": {
    "@1stg/app-config": "^9.0.0",
    "@1stg/lib-config": "^12.0.0",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@mdx-js/rollup": "^2.3.0",
    "@types/lodash": "^4.14.197",
    "@types/mvdan-sh": "^0.10.6",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/web": "^0.0.106",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "@vitest/coverage-istanbul": "^0.33.0",
    "github-markdown-css": "^5.2.0",
    "linguist-languages": "^7.26.1",
    "lodash": "^4.17.21",
    "prettier": "^3.0.0",
    "prettier-plugin-autocorrect": "workspace:*",
    "prettier-plugin-pkg": "workspace:*",
    "prettier-plugin-sh": "workspace:*",
    "prettier-plugin-sql": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1",
    "remark-gfm": "^3.0.1",
    "sass": "^1.63.6",
    "sirv-cli": "^2.0.2",
    "size-limit": "^8.2.6",
    "size-limit-preset-node-lib": "^0.2.0",
    "tsx": "^3.12.7",
    "type-coverage": "^2.26.0",
    "typescript": "^5.1.6",
    "unplugin-auto-import": "^0.16.6",
    "vite": "^4.4.3",
    "vitest": "^0.33.0"
  },
  "resolutions": {
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-autocorrect": "workspace:*",
    "prettier-plugin-pkg": "workspace:*",
    "prettier-plugin-sh": "workspace:*",
    "prettier-plugin-sql": "workspace:*"
  },
  "browserslist": [
    "extends @1stg/browserslist-config/modern"
  ],
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "eslintIgnore": [
    "coverage",
    "dist",
    "packages/**/fixtures",
    "packages/**/lib",
    "packages/**/CHANGELOG.md",
    "packages/*/src/languages.ts",
    "/auto-imports.d.ts",
    "/pnpm-lock.yaml",
    "!/.github",
    "!/.*.js"
  ],
  "markuplint": {
    "extends": "@1stg"
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "size-limit": [
    {
      "path": "packages/autocorrect/lib/index.js",
      "limit": "390B"
    },
    {
      "path": "packages/pkg/lib/index.js",
      "limit": "460B"
    },
    {
      "path": "packages/sh/lib/index.js",
      "limit": "2.4kB"
    },
    {
      "path": "packages/sql/lib/index.js",
      "limit": "2.6kB"
    }
  ],
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNested": true,
    "ignoreNonNullAssertion": true,
    "ignoreFiles": [
      "**/*.d.ts"
    ],
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
