{
  "name": "@rxts/prettier",
  "version": "0.0.0",
  "description": "Opinionated but Incredible Prettier plugins.",
  "repository": "git@github.com:rx-ts/prettier.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -g \"{'mvdan-sh':'sh','prettier/parser-babel':'prettierPlugins.babel','prettier-plugin-pkg':'prettierPlugins.pkg','prettier-plugin-sh':'prettierPlugins.sh'}\" -x mvdan-sh -p",
    "build:ts": "tsc -b",
    "format": "ts-node scripts/format",
    "lint": "run-p lint:*",
    "lint:es": "cross-env PARSER_NO_WATCH=true eslint . --cache --ext js,md,ts -f friendly",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc --noEmit",
    "postinstall": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prebuild": "lerna run build",
    "test": "jest",
    "typecov": "type-coverage --ignore-files '' --strict --update"
  },
  "devDependencies": {
    "@1stg/lib-config": "^1.2.9",
    "@1stg/tslint-config": "^1.2.0",
    "@babel/types": "^7.13.14",
    "@pkgr/imagemin": "^0.5.0",
    "@types/jest": "^26.0.22",
    "@types/js-yaml": "^4.0.0",
    "@types/lodash": "^4.14.168",
    "@types/mvdan-sh": "^0.5.0",
    "@types/prettier": "^2.2.3",
    "core-js": "^3.10.1",
    "https-proxy-agent": "^5.0.0",
    "js-yaml": "^4.1.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "prettier-plugin-pkg": "link:packages/pkg/src",
    "prettier-plugin-sh": "link:packages/sh/src",
    "react": "^17.0.2",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "type-coverage": "^2.17.2",
    "typescript": "^4.2.4",
    "yarn-deduplicate": "^3.1.0"
  },
  "resolutions": {
    "prettier": "^2.2.1"
  },
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true
  },
  "prettier": "@1stg/prettier-config",
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "typeCoverage": {
    "atLeast": 97.41,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreFiles": [
      "*.d.ts"
    ],
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
