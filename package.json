{
  "name": "@rxts/prettier",
  "version": "0.0.0",
  "description": "Opinionated but Incredible Prettier plugins.",
  "repository": "git@github.com:rx-ts/prettier.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:docs": "NODE_ENV=production w -e docs -p --publicPath /",
    "build:r": "r -f cjs,umd -g \"{'mvdan-sh':'sh','prettier/parser-babel':'prettierPlugins.babel','prettier-plugin-pkg':'prettierPlugins.pkg','prettier-plugin-sh':'prettierPlugins.sh','prettier-plugin-sql':'prettierPlugins.sql','node-sql-parser':'NodeSQLParser','sql-formatter':'sqlFormatter'}\" -x mvdan-sh,node-sql-parser,sql-formatter -p",
    "build:ts": "tsc -b",
    "clean": "rimraf 'packages/*/{lib,*.tsbuildinfo}'",
    "docs": "w -e docs --publicPath /",
    "format": "ts-node scripts/format",
    "languages": "ts-node scripts/languages",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "prepare": "simple-git-hooks && yarn languages && yarn-deduplicate --strategy fewer || exit 0",
    "release": "changeset publish",
    "serve": "sirv dist",
    "test": "jest",
    "typecov": "type-coverage"
  },
  "devDependencies": {
    "@1stg/lib-config": "^5.3.0",
    "@babel/types": "^7.17.0",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@pkgr/imagemin": "^3.0.0",
    "@pkgr/webpack-mdx": "^2.0.1",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.181",
    "@types/mvdan-sh": "^0.5.1",
    "@types/prettier": "^2.4.4",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/web": "^0.0.60",
    "github-markdown-css": "^5.1.0",
    "https-proxy-agent": "^5.0.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.2.2",
    "remark-gfm": "^3.0.1",
    "sirv-cli": "^2.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "type-coverage": "^2.21.1",
    "typescript": "^4.6.3"
  },
  "resolutions": {
    "prettier": "^2.6.1"
  },
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "eslintIgnore": [
    "coverage",
    "dist",
    "**/fixtures",
    "**/lib",
    "**/CHANGELOG.md",
    "packages/*/src/languages.ts",
    "!/.*.js"
  ],
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "typeCoverage": {
    "atLeast": 98.21,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreFiles": [
      "**/*.d.ts"
    ],
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
